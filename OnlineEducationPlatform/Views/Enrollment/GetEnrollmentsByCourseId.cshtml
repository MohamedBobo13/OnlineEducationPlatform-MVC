@model List<EnrollmentDtoForRetriveAllEnrollmentsInCourse>



<div class="container mt-5 align-content-center" style="width:1000px">
        <h2 class="text-center mt-4">Enrollments List For Course @ViewBag.CourseId </h2>

       

        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Student ID</th>
                        <th>Course ID</th>
                        <th>Status</th>
                        <th>Enrollment Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var enrollment in Model)
                        {
                            <tr>
                                <td>@enrollment.StudentId</td>
                                <td>@enrollment.CourseId</td>
                                <td>@enrollment.status</td>
                                <td>@(enrollment.EnrollmentDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                              
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No enrollments found.</td>
                        </tr>
                    }
                </tbody>
            </table>

         
            <a asp-controller="Enrollment" asp-action="GetAll" class="btn btn-secondary mt-3">Cancel</a>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

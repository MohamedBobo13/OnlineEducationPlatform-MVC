@model updateenrollmentVm



<div class="container mt-5 align-content-center" style="width:1000px">
        <div class="form-container">
            <h2 class="form-title">Update Enrollment</h2>

            <!-- Display Success or Error Messages -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("Edit", "Enrollment", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="StudentId">Student ID</label>
                    @Html.TextBoxFor(m => m.StudentId, new { @class = "form-control", @placeholder = "Enter Student ID" })
                    @Html.ValidationMessageFor(m => m.StudentId, null, new { @class = "form-error" })
                </div>

                <div class="form-group mt-3">
                    <label for="CourseId">Course ID</label>
                    @Html.TextBoxFor(m => m.CourseId, new { @class = "form-control", @placeholder = "Enter Course ID" })
                    @Html.ValidationMessageFor(m => m.CourseId, null, new { @class = "form-error" })


                </div>
                <div class="form-group mt-3">
                    <label for="Status">Status</label>
                    @Html.DropDownListFor(m => m.Status, new SelectList(new[]
                             {
                new { Value = "Enrolled", Text = "Enrolled" },
                new { Value = "Inprogress", Text = "In Progress" },
                new { Value = "Completed", Text = "Completed" }
                }, "Value", "Text"), "Select Status", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Status, null, new { @class = "form-error" })
                </div>

                <div class="form-group mt-3">
                    <label for="EnrollmentDate">Enrollment Date</label>
                    @Html.TextBoxFor(m => m.EnrollmentDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(m => m.EnrollmentDate, null, new { @class = "form-error" })
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="GetAll" class="btn btn-secondary">Back to List</a>
                </div>
            }
        </div>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



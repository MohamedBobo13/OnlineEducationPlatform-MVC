@model EnrollmentDtoForRetriveAllEnrollmentsInCourse


<div class="container mt-5 align-content-center" style="width:1000px">
        <h2 class="text-center">Confirm Unenrollment</h2>

        <div class="alert alert-warning">
            Are you sure you want to soft delete this enrollment ?
        </div>

        <div class="mb-3">
            <strong>Student ID:</strong> @Model.StudentId
        </div>
        <div class="mb-3">
            <strong>Course ID:</strong> @Model.CourseId
        </div>

        <form asp-action="SoftDelete" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" name="studentId" value="@Model.StudentId" />
            <input type="hidden" name="courseId" value="@Model.CourseId" />

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger me-2">Unenroll</button>
                <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

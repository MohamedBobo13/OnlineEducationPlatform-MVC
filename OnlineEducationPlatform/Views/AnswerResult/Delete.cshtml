@model AnswerResultReadVm

<h2 class="text-center mb-4">Delete Answer Result</h2>

<h3 class="text-center text-danger">Are you sure you want to delete this answer result?</h3>

<div class="container mt-5 align-content-center" style="width:1000px">
    <h4>Answer Result Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Student Answer</dt>
        <dd class="col-sm-10">@Model.StudentAnswer</dd>

        <dt class="col-sm-2">Marks Awarded</dt>
        <dd class="col-sm-10">@Model.MarksAwarded</dd>

        <dt class="col-sm-2">Student ID</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>

        <dt class="col-sm-2">Question ID</dt>
        <dd class="col-sm-10">@Model.QuestionId</dd>

        <dt class="col-sm-2">Answer ID</dt>
        <dd class="col-sm-10">@Model.AnswerId</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post" class="text-center mt-4">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
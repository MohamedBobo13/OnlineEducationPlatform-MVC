<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - OnlineEducationPlatform</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Custom Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap"
          rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        .menu-icon {
            font-size: 30px;
            cursor: pointer;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1;
            color: #111;
        }
        .bg-white{
            background-color: #81a8d;
        }
        .text-primary{
            color: #413939;
        }
        /* Sidebar menu */
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #1a29cf;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            z-index: 2;
        }

            /* Sidebar links */
            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 1.4rem;
                color: #fff;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    color: #000;
                }

            /* Close button (X) */
            .sidebar .closebtn {
                position: absolute;
                top: 20px;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
                color: #fff;
            }
    </style>

</head>

<body class="d-flex flex-column h-100">
    
    <main class="flex-shrink-0">



        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container px-5">
                <!-- Menu icon to open the sidebar -->
                <span class="menu-icon" onclick="openMenu()">
                    <i class="fas fa-bars"></i>
                </span>

                <!-- Sidebar Menu -->
                <div id="sidebar" class="sidebar">
                    <!-- Close icon -->
                    <a href="javascript:void(0)" class="closebtn" onclick="closeMenu()">
                        <i class="fas fa-times"></i>
                        @if (Context.User.Identity.IsAuthenticated == true)
                        {
                            <a asp-controller="Course" asp-action="Index">Courses</a>
                            <a asp-controller="Lecture" asp-action="Index">Lectures</a>
                            <a asp-controller="Vedio" asp-action="Index">Videos</a>
                            <a asp-controller="Pdf" asp-action="Index">PDFs</a>
                            <a asp-controller="Enrollment" asp-action="GetAll">Enrollments</a>
                            <a asp-controller="Quiz" asp-action="Index">Quizzes</a>
                            <a asp-controller="QuizResult" asp-action="GetAll">Quiz Results</a>
                            <a asp-controller="Exam" asp-action="Index">Exams</a>
                            <a asp-controller="ExamResult" asp-action="GetAll">Exam Results</a>
                            <a asp-controller="Question" asp-action="Index">Questions</a>
                            <a asp-controller="AnswerResult" asp-action="Index">Answer Results</a>
                            
                            @if (User.IsInRole("Admin") == true)
                            { 
                                <a asp-controller="Answer" asp-action="Index">Answers</a>

                                <a asp-controller="Instructor" asp-action="GetAll">Instructors</a>
                                <a asp-controller="Student" asp-action="GetAll">Students</a>
                                <a asp-controller="Enrollment" asp-action="GetAllDeleted">Deleted Enrollments</a>
                                <a asp-controller="ExamResult" asp-action="GetAllDeleted">Deleted ExamResult</a>
                                <a asp-controller="QuizResult" asp-action="GetAllDeleted">Deleted QuizResult </a>

                            }
                            @if (User.IsInRole("Instructor") == true)
                            {
                                <a asp-controller="Answer" asp-action="Index">Answers</a>
                            }

                        }
                    </a>
                    <!-- Menu links -->
                   

                  

                    

                    
                    
                </div>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span class="fw-bolder text-primary">
                        Study
                        Zone
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                        @if (Context.User.Identity.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Welcome, @User.Identity.Name</span>
                                

                            </li>
                            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-link text-dark">Logout </button>
                            </form>
                            @if (User.IsInRole("Admin") == true)
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="RegisterAdmin">RegisterAdmin</a></li>

                            }

                        }
                        else
                        {

                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Header-->
        <header class="py-5">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
        </header>
        <!-- About Section-->
     
    </main>
    <!-- Footer-->
    <footer class="bg-white py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto">
                    <div class="small m-0">Copyright &copy; Your Website 2023</div>
                </div>
                <div class="col-auto">
                    <a class="small" href="#!">Privacy</a>
                    <span class="mx-1">&middot;</span>
                    <a class="small" href="#!">Terms</a>
                    <span class="mx-1">&middot;</span>
                    <a class="small" href="#!">Contact</a>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/scripts.js"></script>
    <script src="~/js/scripts.js"></script>
    <script>
                // menubar
        function openMenu() {
            document.getElementById("sidebar").style.width = "250px";
          }

          function closeMenu() {
            document.getElementById("sidebar").style.width = "0";
          }

    </script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
@using OnlineEducationPlatform.BLL.Dto.CourseDto
@model IEnumerable<CourseReadVm>
<div class="container mt-5 align-content-center" style="width:1000px">
        <h2 class="text-center mb-4">Course List</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                <th>Title</th>
                <th>Description</th>
                <th>TotalHours</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
					<td>@course.TotalHours</td>


					<td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
                        {
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@course.Id">Details</a>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                        }
                    </td>
                       
                    </tr>
                }
            </tbody>
        </table>
    @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
                    {
        <div class="text-end">
            <a class="btn btn-primary btn-create" asp-action="Create">Create New Course</a>
        </div>
        }
    </div>


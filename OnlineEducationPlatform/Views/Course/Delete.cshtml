@using OnlineEducationPlatform.BLL.Dto.CourseDto
@model CourseReadVm
<div class="container mt-5 align-content-center" style="width:1000px">
<h2>Delete Course</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Course Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">TotalHours</dt>
        <dd class="col-sm-10">@Model.TotalHours</dd>
    </dl>
</div>
</div>

<form asp-action="DeleteConfirmed" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

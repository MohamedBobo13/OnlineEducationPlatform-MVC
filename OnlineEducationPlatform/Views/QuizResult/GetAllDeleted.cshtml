@model IEnumerable<quizresultwithoutidvm>

<div class="container mt-5 align-content-center" style="width:1000px">
        <h2 class="text-center mt-4">Soft Delete Quiz Result List</h2>
        <div class="table-container">
            <table class="table table-striped table-bordered">
            @if (User.IsInRole("Admin")){

                <thead class="table-light">
                    <tr>
                        <th>Student ID</th>
                        <th>Quiz ID</th>
                        <th>Score</th>
                        <th>Total Marks</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var quizresult in Model)
                        {
                            <tr>
                                <td>@quizresult.studentId</td>
                                <td>@quizresult.QuizId</td>
                                <td>@quizresult.Score</td>
                                <td>@quizresult.TotalMarks</td>
                                <td class="action-buttons">


                                    <a asp-action="ConfirmHardDelete" asp-route-studentId="@quizresult.studentId" asp-route-quizId="@quizresult.QuizId" class="btn btn-secondary">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No Soft deleted Quiz Results found.</td>
                        </tr>
                    }
                </tbody>
                }
            </table>
        @if (User.IsInRole("Admin"))
        {

            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
        }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@model ExamUpdateVm


<div class="container mt-5 align-content-center" style="width:1000px">
        <div class="form-container">
            <h2 class="form-title">Update Exam </h2>

            <!-- Display Success or Error Messages -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("Edit", "Exam", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="CourseId">CourseId </label>
                    @Html.TextBoxFor(m => m.CourseId, new { @class = "form-control", @placeholder = "Enter CourseId" })
                    @Html.ValidationMessageFor(m => m.CourseId, null, new { @class = "form-error" })
                </div>
                <div class="form-group">
                    <label for="Title">Title </label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Enter Title" })
                    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "form-error" })
                </div>

                <div class="form-group mt-3">
                    <label for="TotalMarks">Total Marks</label>
                    @Html.TextBoxFor(m => m.TotalMarks, new { @class = "form-control", @placeholder = "Enter Total Marks" })
                    @Html.ValidationMessageFor(m => m.TotalMarks, null, new { @class = "form-error" })


                </div>
                <div class="form-group mt-3">
                    <label for="TotalQuestions">Total Questions</label>
                    @Html.TextBoxFor(m => m.TotalQuestions, new { @class = "form-control", @placeholder = "Enter Total Questions" })
                    @Html.ValidationMessageFor(m => m.TotalQuestions, null, new { @class = "form-error" })


                </div>
                <div class="form-group mt-3">
                    <label for="DurationMinutes">Duration Minutes </label>
                    @Html.TextBoxFor(m => m.DurationMinutes, new { @class = "form-control", @placeholder = "Enter Duration Minutes " })
                    @Html.ValidationMessageFor(m => m.DurationMinutes, null, new { @class = "form-error" })


                </div>
                <div class="form-group mt-3">
                    <label for="Passingmarks">Passing Marks </label>
                    @Html.TextBoxFor(m => m.PassingMarks, new { @class = "form-control", @placeholder = "Enter Passing Marks " })
                    @Html.ValidationMessageFor(m => m.PassingMarks, null, new { @class = "form-error" })


                </div>


                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            }
        </div>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>




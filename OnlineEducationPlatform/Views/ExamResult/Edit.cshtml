@model updateexamresultVm

<div class="container mt-5 align-content-center" style="width:1000px">
        <div class="form-container">
            <h2 class="form-title">Update Exam Result</h2>

            <!-- Display Success or Error Messages -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @using (Html.BeginForm("Edit", "ExamResult", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="StudentId">Student ID</label>
                    @Html.TextBoxFor(m => m.id, new { @class = "form-control", @placeholder = "Enter ID" })
                    @Html.ValidationMessageFor(m => m.id, null, new { @class = "form-error" })
                </div>

                <div class="form-group mt-3">
                    <label for="Score">Score</label>
                    @Html.TextBoxFor(m => m.Score, new { @class = "form-control", @placeholder = "Enter Score" })
                    @Html.ValidationMessageFor(m => m.Score, null, new { @class = "form-error" })


                </div>
                <div class="form-group mt-3">
                    <label for="TotalMarks">Total Marks</label>
                    @Html.TextBoxFor(m => m.TotalMarks, new { @class = "form-control", @placeholder = "Enter Total Marks" })
                    @Html.ValidationMessageFor(m => m.TotalMarks, null, new { @class = "form-error" })


                </div>
                <div class="form-group mt-3">
                    <label>Exam Result:</label><br />
                    <div class="form-check form-check-inline">
                        <input type="radio" id="passed" name="IsPassed" value="true" class="form-check-input" checked />
                        <label for="passed" class="form-check-label">Passed</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" id="failed" name="IsPassed" value="false" class="form-check-input" />
                        <label for="failed" class="form-check-label">Failed</label>
                    </div>
                </div>




                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="GetAll" class="btn btn-secondary">Back to List</a>
                </div>
            }
        </div>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


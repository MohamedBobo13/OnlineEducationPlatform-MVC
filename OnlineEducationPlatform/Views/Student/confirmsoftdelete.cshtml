@model studentreadVm




<div class="container mt-5 align-content-center" style="width:1000px">
        <div class="delete-container">
            <h2>Confirm Delete</h2>

            <p>Are you sure you want to delete the student <strong>@Model.Username</strong>?</p>

            <!-- Display error messages -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="studentId" value="@Model.Id" />
               

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger me-2">Delete</button>
                    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@model IEnumerable<studentreadVm>


<div class="container mt-5 align-content-center" style="width:1000px">
        <h2 class="text-center mt-4">Student List</h2>


        <div class="mb-4">


        </div>
        <div class="table-container">
            <table class="table table-striped table-bordered">
            @if (User.IsInRole("Admin")){

                <thead class="table-light">
                    <tr>
                        <th>Student ID</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Phone </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Username</td>
                                <td>@student.Email</td>
                                <td>@student.PhoneNumber</td>
                                <td class="action-buttons">
                                   

                                    <a asp-action="ConfirmSoftDelete" asp-route-studentId="@student.Id" class="btn btn-secondary">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No Students found.</td>
                        </tr>
                    }
                </tbody>
                }
            </table>

        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

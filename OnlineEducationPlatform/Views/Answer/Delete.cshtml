@model AnswerReadVm
<div class="container mt-5 align-content-center" style="width:1000px">
<h2 class="text-center mb-4">Delete Answer</h2>

<h3 class="text-center text-danger">Are you sure you want to delete this answer?</h3>

<div class="container mt-4">
    <h4>Answer Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Answer Text</dt>
        <dd class="col-sm-10">@Model.AnswerText</dd>

        <dt class="col-sm-2">Is Correct</dt>
        <dd class="col-sm-10">@Model.IsCorrect</dd>

        <dt class="col-sm-2">Question Text</dt>
        <dd class="col-sm-10">@Model.QuestionText</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" class="text-center mt-4">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model AnswerUpdateVm
<div class="container mt-5 align-content-center" style="width:1000px">
<h2 class="text-center">Edit Answer</h2>

<form asp-action="Edit" method="post" class="container mt-4">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="AnswerText" class="control-label"></label>
        <input asp-for="AnswerText" class="form-control" placeholder="Enter the answer text" />
        <span asp-validation-for="AnswerText" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IsCorrect" class="control-label"></label>
        <select asp-for="IsCorrect" class="form-select">
            <option value="true">Correct</option>
            <option value="false">Incorrect</option>
        </select>
        <span asp-validation-for="IsCorrect" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="QuestionId" class="control-label"></label>
        <input asp-for="QuestionId" class="form-control" placeholder="Enter the question ID" />
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@model AnswerAddVm
<div class="container mt-5 align-content-center" style="width:1000px">
<h2 class="text-center">Create Answer</h2>

<form asp-action="Create" method="post" class="container-xl">
    <div>
        <label asp-for="AnswerText" class="control-label"></label>
        <input asp-for="AnswerText" class="form-control" />
        <span asp-validation-for="AnswerText" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="IsCorrect" class="form-label"></label>
        <select asp-for="IsCorrect" class="form-select">
            <option value="true">True</option>
            <option value="false">False</option>
        </select>
        <span asp-validation-for="IsCorrect" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuestionId" class="control-label"></label>
        <input asp-for="QuestionId" class="form-control" />
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>
    <br />
    
</form>

<div class="form-group text-center">
     <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

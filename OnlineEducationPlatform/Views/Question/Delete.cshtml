@model QuestionReadVm
<div class="container mt-5 align-content-center" style="width:1000px">
<h2>Delete Question</h2>

<h3>Are you sure you want to delete this question?</h3>
<div>
    <h4>Question Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>

        <dt class="col-sm-2">
            Marks
        </dt>
        <dd class="col-sm-10">
            @Model.Marks
        </dd>

        <dt class="col-sm-2">
            Question Type
        </dt>
        <dd class="col-sm-10">
            @Model.QuestionType
        </dd>

        @if (Model.QuizId != 0)
        {
            <dt class="col-sm-2">
                Quiz ID
            </dt>
            <dd class="col-sm-10">
                @Model.QuizId
            </dd>
        }
        else if (Model.ExamId != 0)
        {
            <dt class="col-sm-2">
                Exam ID
            </dt>
            <dd class="col-sm-10">
                @Model.ExamId
            </dd>
        }
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}